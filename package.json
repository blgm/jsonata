{
  "name": "jsonata",
  "version": "1.1.1",
  "description": "JSON query and transformation language",
  "main": "lib/jsonata.js",
  "homepage": "http://jsonata.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsonata-js/jsonata.git"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "node ./node_modules/istanbul/lib/cli.js cover --report cobertura --report html ./node_modules/mocha/bin/_mocha -- \"test/**/*.js\"",
    "posttest": "npm run check-coverage && npm run package",
    "check-coverage": "istanbul check-coverage -statement 100 -branch 100 -function 100 -line 100",
    "package": "npm run transpile && npm run minify && npm run duplicate",
    "transpile": "babel lib -d dist",
    "minify": "uglifyjs dist/jsonata.js -o dist/jsonata.min.js --compress --mangle",
    "duplicate": "copyfiles -u 1 dist/*.js .",
    "lint": "eslint .",
    "postlint": "npm run doc",
    "doc": "jsdoc --configure jsdoc.json .",
    "cover": "istanbul cover _mocha",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls"
  },
  "license": "MIT",
  "keywords": [
    "JSON",
    "query",
    "transformation",
    "transform",
    "mapping",
    "path"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es3": "^1.0.1",
    "chai": "^3.4.1",
    "copyfiles": "^1.2.0",
    "coveralls": "^2.11.14",
    "eslint": "^2.0.0",
    "eslint-plugin-ideal": "^0.1.3",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.4.0",
    "mocha": "^3.0.2",
    "mocha-lcov-reporter": "^1.2.0",
    "uglify-js": "^2.7.5"
  },
  "engines": {
    "node": ">= 0.10"
  }
}
